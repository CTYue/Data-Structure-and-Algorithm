#include <iostream>
#include <vector>
#include <string>
using namespace std;

class Solution {
public:
	int reverse(int x)
	{
				long int temp;
				long int k = 10;//Problem~!
				int l = 1;
				long ans = 0;
				int i = 0;
				while( x/k )//9 counts
				{
					l *= 10;
					k *= 10;//10 digit max when 9 counts
					i++;
//					cout << "This is the " << i << "th count." << endl;
				}

				k = 10;
				i = 0;

				while(x/(k/10))// 10 counts
				{
					i++;
					temp = (x%k) /(k/10);//extract each integer
					ans += (temp*l);	//combine to a number
					k *= 10;//11 digit max when 10 counts
					l /= 10;
//					cout << endl << "This is the " << i << "th count." << endl;
//					cout << temp << endl << ans << endl << k << endl << l << endl;
				}
				if( ans < INT_MIN || ans > INT_MAX)
					return 0;
				else
					return ans;
	}
};


class Solution1 {
public:
    int reverse1(int x) {
        long long res = 0;
        while(x)
        {
            res = res*10;
            res += x;
            x /= 10;
        }
        return (	res<INT_MIN || res>INT_MAX ) ? 0 : res;
    }
};

int main()
{
	Solution s;
	Solution1 s1;
	int x = -2147483648;//My code doesn't work when 10-digit overflow number input
//	int x = -2147414221;
	int result = 0;
	int result1 = 0;
	result = s.reverse(x);
	result1 = s1.reverse1(x);
	cout << endl;
	cout << "The input is: " << x << endl;
	cout << "The result is: ";
	cout << result << endl;
	cout << endl;
	cout << "The input1 is: " << x << endl;
	cout << "The result1 is: ";
	cout << result1 << endl;
}
